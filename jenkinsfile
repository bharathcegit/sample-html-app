pipeline 
{
    agent any
    stages 
    {
        stage('checkout') 
        {
            steps 
            {
                git branch: 'deploy-on-nginx', url: "https://github.com/bharathcegit/sample-html-app.git"
            }
        }
        stage('installation') 
        {
            steps 
            {
                sh "ansible-playbook -i inventory ansible-installation.yml"
            }
        }
        stage('deploy') 
        {
            steps 
            {
                sh "ansible-playbook -i inventory deploy-on-nginx.yml"
            }
        }
    }
}