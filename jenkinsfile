pipeline 
{
    agent {
        node {
            label 't054-runner'
        }
    }
    stages {
        stage('checkout') 
        {
            steps 
            {
                git credentialsId: 'gitlab', branch: 'master', url: "https://git.cloudavise.com/visops/t054/ci-cd-nginx.git"
            }
        }
        stage('deploy') 
        {
            steps 
            {
                sh "ansible-playbook -i inventory deployment-on-nginx.yml"
            }
        }
    }
}