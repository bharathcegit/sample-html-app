pipeline 
{
    agent 
    {
        node {
            label 't054-runner'
        }
    }
    stages 
    {
        stage('checkout') 
        {
            steps 
            {
                git credentialsId: 'ca-git-access', branch: 'deploy-on-docker', url: "https://git.cloudavise.com/visops/t054/ci-cd-nginx.git"
            }
        }
        stage('deploy') 
        {
            steps 
            {
                sh "ansible-playbook -i inventory deploy-on-docker.yml"
            }
        }
    }
}